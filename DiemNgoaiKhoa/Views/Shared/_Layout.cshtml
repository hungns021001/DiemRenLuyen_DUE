                        </li>*@
                            @*<li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Items" asp-action="Index">Mục lớn</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ItemDetails" asp-action="Index">Mục nhỏ</a>
                            </li>*@
                            @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Points" asp-action="Index">Điểm rèn luyện</a>
                        </li>*@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Semesters" asp-action="Index">Kì học</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">Sinh viên</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Lecturers" asp-action="Index">Giảng viên</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="PointFrames" asp-action="Index">Khung điểm</a>
                            </li>
                            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-danger" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            @User.Identity.Name
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                            @*<li><a class="dropdown-item" href="#">Action</a></li>*@
                                            <li><a class="dropdown-item" href="/Authen/Logout">Đăng xuất</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </ul>

                    </div>
                </div>
            </nav>
        }
        else
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Authen" asp-action="Index"></a>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

