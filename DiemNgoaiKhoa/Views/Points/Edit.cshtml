@model DiemNgoaiKhoa.Models.Point

@{
    ViewData["Title"] = "Edit";
}

<h1>Cập nhật</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Họ và tên:</label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemesterId" class="control-label">Học kỳ:</label>
                <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId"></select>
                <span asp-validation-for="SemesterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointFrameId" class="control-label">Nội dung & tiêu chí</label>
                <select asp-for="PointFrameId" class="form-control" asp-items="ViewBag.PointFrameId"></select>
                <span asp-validation-for="PointFrameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointStudent" class="control-label">Điểm sinh viên</label>
                <input asp-for="PointStudent" class="form-control" />
                <span asp-validation-for="PointStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointMonitor" class="control-label">Điểm lớp trưởng</label>
                <input asp-for="PointMonitor" class="form-control" />
                <span asp-validation-for="PointMonitor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointLecturer" class="control-label">Điểm giảng viên</label>
                <input asp-for="PointLecturer" class="form-control" />
                <span asp-validation-for="PointLecturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
