@model IEnumerable<DiemNgoaiKhoa.Models.Lecturer>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Họ và tên:
            </th>
            <th>
                Ngày sinh:
            </th>
            <th>
                Giới tính:
            </th>
            <th>
                Số điện thoại:
            </th>
            <th>
                Địa chỉ:
            </th>
            <th>
                Tài khoản:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Username)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Cập nhật</a> |
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
