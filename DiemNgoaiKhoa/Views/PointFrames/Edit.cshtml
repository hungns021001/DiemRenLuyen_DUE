@model DiemNgoaiKhoa.Models.PointFrame

@{
    ViewData["Title"] = "Edit";
}

<h1>Cập nhật</h1>

<h4>Khugn điểm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ItemDetailId" class="control-label">Mục</label>
                <select asp-for="ItemDetailId" class="form-control" asp-items="ViewBag.ItemDetailId"></select>
                <span asp-validation-for="ItemDetailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nội dung và tiêu chí</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPoint" class="control-label">Điểm tối đa</label>
                <input asp-for="MaxPoint" class="form-control" />
                <span asp-validation-for="MaxPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
